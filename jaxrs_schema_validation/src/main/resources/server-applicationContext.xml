<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xmlns:jaxrs="http://cxf.apache.org/jaxrs" xmlns:util="http://www.springframework.org/schema/util"
   xmlns:cxf="http://cxf.apache.org/core"
   xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://cxf.apache.org/jaxrs
        http://cxf.apache.org/schemas/jaxrs.xsd
        http://cxf.apache.org/core 
        http://cxf.apache.org/schemas/core.xsd
        http://www.springframework.org/schema/util 
        http://www.springframework.org/schema/util/spring-util.xsd"
>

   <bean id="exceptionMapper" class="demo.jaxrs.server.CustomServiceExceptionMapper"/>

  <util:map id="jsonNamespaceMap" map-class="java.util.Hashtable">
       <entry key="http://customerservice.example.com/" value="cs"/>
  </util:map>

	<bean id="jsonProvider" class="org.apache.cxf.jaxrs.provider.json.JSONProvider">
		<property name="ignoreNamespaces" value="false" />
		<property name="namespaceMap" ref="jsonNamespaceMap" />
		<property name="serializeAsArray" value="false" />
		<!-- property name="arrayKeys">
			<list>
				<value>address</value>
			</list>
		</property-->
		<property name="dropRootElement" value="false" />
		<property name="supportUnwrapped" value="false" />
		<!-- property name="wrapperName" value="cs.customer" /-->
		<!-- property name="schemaHandler" ref="schemaHolder" /-->
	</bean>

	<bean id="schemaHolder" class="org.apache.cxf.jaxrs.utils.schemas.SchemaHandler">
		<property name="schemas" ref="schemas" />
	</bean>
	<util:list id="schemas">
		<value>classpath:/customer.xsd</value>
	</util:list>

	<bean id="jsonJacksonProvider" class="org.codehaus.jackson.jaxrs.JacksonJsonProvider"/>

	<jaxrs:server id="restServer" address="http://localhost:9000/"
		serviceClass="demo.jaxrs.server.CustomerProxy">
      <jaxrs:serviceBeans>
         <bean class="demo.jaxrs.server.SubResource"/>
      </jaxrs:serviceBeans>
      <jaxrs:providers>
   	  	  <ref bean="exceptionMapper" />
          <ref bean="jsonProvider" />
   	  	  <!-- ref bean="jsonJacksonProvider" /-->
   	  </jaxrs:providers>
      <!-- jaxrs:schemaLocations>
         <jaxrs:schemaLocation>classpath:/customer.xsd</jaxrs:schemaLocation>
      </jaxrs:schemaLocations-->
  </jaxrs:server>

</beans>